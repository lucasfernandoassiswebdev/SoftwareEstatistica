<canvas id="myChart"></canvas>

@section Scripts{
    <script>
        var ctx = document.getElementById("myChart").getContext("2d"),
        dados = JSON.parse('@ViewBag.Dados'.replace(/&quot;/g,'"')),
        colors = ['rgba(255, 99, 132, 0.2)',     'rgba(54, 162, 235, 0.2)',  'rgba(255, 206, 86, 0.2)',
                  'rgba(75, 192, 192, 0.2)',     'rgba(153, 102, 255, 0.2)', 'rgba(255, 159, 64, 0.2)'],
        borderColors = ['rgba(255,99,132,1)',    'rgba(54, 162, 235, 1)',    'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)', 'rgba(153, 102, 255, 1)',   'rgba(255, 159, 64, 1)'],
        coresSorteadas = [], bordasSorteadas = [];

        dados.Quantidades.forEach(function(){
            let aleatorio = Math.floor(Math.random() * (5 - 0)) + 0;
            coresSorteadas.push(colors[aleatorio]); 
            bordasSorteadas.push(colors[aleatorio]);
        });

        var myChart = new Chart(ctx, {
            type: 'pie',
            data: {
                labels: dados.Variaveis,
                datasets: [{
                    label: '# of Votes',
                    data: dados.Quantidades,
                    backgroundColor: coresSorteadas,
                    borderColor: bordasSorteadas,
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero:true
                        }
                    }]
                }
            }
        });
    </script>
}